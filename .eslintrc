// install the following packages:
// yarn add --dev eslint prettier eslint-config-airbnb@^15.0.1 eslint-config-prettier eslint-plugin-prettier eslint-plugin-react eslint-plugin-import eslint-plugin-jsx-a11y@^5.1.1
//npm install --save-dev eslint prettier eslint-config-airbnb eslint-config-prettier eslint-plugin-prettier eslint-plugin-react eslint-plugin-import eslint-plugin-jsx-a11y babel-eslint
{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "camelcase": "off",
    "react/prop-types": 0,
    "react/no-array-index-key": 0,
    "react/no-unused-prop-types": 0,
    "spaced-comment": 0,
    "react/require-default-props": 0,
    "react/forbid-prop-types": 0,
    "no-param-reassign": 0,
    "no-nested-ternary": 0,
    "react/no-unused-state": 0,
    "no-plusplus": 0,
    "react/state-in-constructor": 0,
    "import/order": 0,
    "import/prefer-default-export": 0,
    "react/sort-comp": 0,
    "prefer-const": 0,
    "radix": 0,
    "react/self-closing-comp": 0,
    "react/button-has-type": 0,
    "no-extra-boolean-cast": 0,
    "no-return-assign": 0,
    "react/no-unescaped-entities": 0,
    "no-shadow": 0,
    "no-use-before-define": 0,
    "no-unused-vars": 0,
    "react/jsx-props-no-spreading": 0,
    "no-case-declarations": 0,
    "react/default-props-match-prop-types": 0,
    "react/no-access-state-in-setstate": 0,
    "react/prefer-stateless-function": 0,
    "jsx-a11y/href-no-hash": ["off"],
    "react/destructuring-assignment": [1, "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
  }
}